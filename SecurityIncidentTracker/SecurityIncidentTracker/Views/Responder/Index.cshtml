@using SecurityIncidentTracker.Models
@model List<ResponderViewModel>

@{
    ViewData["Title"] = "Responders";
}

<div class="container-fluid">

    @* Page Header *@
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="display-6">Responders</h1>
            <p class="text-muted mb-0">Manage team members who can be assigned incidents.</p>
        </div>
        <div class="col-auto">
            <a asp-controller="Responder" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Add Responder
            </a>
        </div>
    </div>

    @* Responders Table *@
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Responder List</h5>
        </div>

        <div class="card-body p-0">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var responder in Model)
                            {
                                <tr>
                                    <td>@responder.ResponderID</td>
                                    <td>@responder.Name</td>
                                    <td>@responder.Email</td>
                                    <td>@responder.Role</td>
                                    <td>
                                        @if (responder.IsActive)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <p class="mb-0">No responders found yet. Add your first responder.</p>
                </div>
            }
        </div>
    </div>

</div>
